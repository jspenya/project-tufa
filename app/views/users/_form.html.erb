<div class="container">
    <div class="col-md-6">
      <%= form_for @user do |form| %>
        <div class="form-group"></div>
          <%= label_tag :username %>
          <%= form.text_field :username, autofocus: true, class: "form-control" %>

        <div class="form-group"></div>
          <%= label_tag :email %>
          <%= form.email_field :email, autocomplete: "email", class: "form-control" %>
        
        <div class="form-group"></div>
        <%= label_tag 'Password (must be at least 6 characters)' %>
        <%= form.text_field :password, class: "form-control" %>
        
        <div class="form-group"></div>
          <%if current_user.admin?%>
              <%= label_tag :admin %>? Check if yes
            <%= form.check_box :admin %>
          <% end %>
        <%= form.submit "Submit", class: "btn btn-primary float-right" %>
      <% end %>
    </div>
</div>