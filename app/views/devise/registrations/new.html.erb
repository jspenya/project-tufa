<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
      <div class="col-md-4 border-top border-bottom border-left border-right pt-5 pb-5 pl-5 pr-5 text-left", id="rcorners2">
        <h4>hi!</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field pb-4 pt-4">
            <%= f.email_field :email, id:"login", placeholder: 'Email', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field pb-4">
            <%= f.text_field :username, id:"login", placeholder: 'Username', autofocus: true, autocomplete: "username" %>
          </div>

          <div class="field pb-4">
            <%= f.password_field :password, id:"login", placeholder: 'Password, minimum of 6 characters', autocomplete: "new-password" %>
          </div>

          <div class="field pb-4">
            <%= f.password_field :password_confirmation, id:"login", placeholder: 'Confirm Password', autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:'btn btn-primary btn-block' %>
          </div>
        <% end %>
        <%# <%= render "devise/shared/links" %>
      </div>
    <div class="col-md-4"></div>
  </div>
</div>
